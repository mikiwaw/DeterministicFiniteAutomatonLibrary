<Window x:Class="GUI.TransitionFunctionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dg2d="clr-namespace:DataGrid2DLibrary;assembly=DataGrid2DLibrary"
        Title="TransitionFunctionWindow" Height="300" Width="300"
        x:Name="root">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <dg2d:DataGrid2D Grid.Row="0"  Name="dataGrid2D"
                 ItemsSource2D="{Binding Int2DList}" />
            <Button Grid.Row="1" Height="27" Content="Generuj" Click="GenerujButton_Click" />
    </Grid>
</Window>
